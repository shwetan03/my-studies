<!DOCTYPE html>
<html>

	<head>
		<title>myStudies</title>
		<link rel="stylesheet" href="styles.css">
		<style>
			#login {
				display: grid;
				background-color: #660066;
				float: center;
				width: 10%;
				height: 100px;
				padding: 10%;
				padding-top: 5%;
				margin-top: 5%;
				margin-left: 35%;
				color: white;
			}

			#login-form {
				grid-column: 1;
				grid-row: 1;
				padding: 2%;
			}

			#login-button {
				padding: 7%;
				margin: 20%;
				margin-left: 25%;
				float: center;
			}

			#login-label {
				padding: 10px;
				margin-left: 45%;
				margin-bottom: 0%;
				float: center;
				font-size: 40px;
			}

			label {
				padding: 2%;
			}

			select {
				padding: 10px;
			}
		</style>
	</head>

	<body>
		<div id="navbar">
			<nav>
				<ul id="navbar-list">
					<li id="myStudies-title" class="nav-item"><h1><a href="/" id="home-link">myStudies</a></h1></li>
					<li class="nav-item"><span><a href="/login" class="nav-link">Login</a></span></li>
					<li class="nav-item"><span><a href="/create_account" class="nav-link">Create Account</a></span></li>
					<li class="nav-item"><span><a href="/manage_tasks" class="nav-link">Manage Tasks</a></span></li>
					<li class="nav-item"><span><a href="#" class="nav-link">Current Task</a></span></li>
				</ul>
			</nav>
		</div>
		<h3 id="login-label">Login</h3>
		<form id="login-form" action="/login" method="post">
			<div id="login">
				<label for="email">Email:</label><br>
				<input type="text" id="email" name="email"><br>
				<label for="pswd">Password:</label><br>
				<input type="text" id="pswd" name="pswd"><br>
				<label for="account-type">Parent or student?</label>
				<select id="account-type" name="account-type">
					<option value="student" selected>Student</option>
					<option value="parent">Parent</option>
				</select>
				<input type="submit" value="Login" id="login-button">
			</div>
		</form>

		<!-- <form>
			<a href="/create_account" class="nav-link"><input type="button" value="Create an account" id="create-account-button"></a>
		</form> -->
	</body>

	<footer style="padding: 5%; margin-top: 20%;" id="footer-bar">
